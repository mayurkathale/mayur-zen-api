{% extends 'base.html.twig' %}

{% block body %}
    <h1>History</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ history.id }}</td>
            </tr>
            <tr>
                <th>Field</th>
                <td>{{ history.field }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if history.created %}{{ history.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('history_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('history_edit', { 'id': history.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
